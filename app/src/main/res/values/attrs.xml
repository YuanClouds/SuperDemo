<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="autoMessageTextView">
        <attr name="autoTitleTextSize" format="dimension"></attr>
        <attr name="autoTitleTextColor" format="color"></attr>
        <attr name="autoContentTextSize" format="dimension"></attr>
        <attr name="autoContentTextColor" format="color"></attr>
        <attr name="autoImage" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="verticalTextView">
        <attr name="textSize" format="dimension"></attr>
        <attr name="textColor" format="color"></attr>
        <attr name="text" format="string"></attr>
        <attr name="tv_gravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
        </attr>
        <attr name="scrollable" format="boolean"></attr>

    </declare-styleable>

</resources>