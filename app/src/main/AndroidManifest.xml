            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity android:name=".ListActivity" />
        <activity android:name=".databases.DbActivity" />
        <activity android:name=".routers.RouterActivity" />
        <activity android:name=".alarmservices.AlarmActivity" />
        <activity android:name=".AutoTextViewActivity" />
        <activity android:name=".IndexListActivity"></activity>
        <activity android:name=".lambda.LambdaActivity"/>
